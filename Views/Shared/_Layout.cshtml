@using Microsoft.AspNetCore.Identity 
@inject SignInManager<IdentityUser> _SignInManager
<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width"/>
	<title>@ViewBag.Title</title>
	<link href="~/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
	<link href="~/css/site.css" rel="stylesheet" />
	<style>
		body {
			margin-left: 50px;
			margin-right: 50px
		}
	</style>
</head>
<body>

	<nav class="navbar navbar-expand-sm bg-dark navbar-dark">
		<a class="navbar-brand" href="/">
			<img src="~/images/1572171815964.jpeg" style="width: 15px;height: 15px"/>
		</a>
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#se1">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div id="se1" class="collapse navbar-collapse">
			<ul class="navbar-nav">
				<li class="nav-item">
					<a class="nav-link" href="/">学生列表</a>
				</li>
                <li class="nav-item">
                    <a class="nav-link" href="/Home/Create">添加学生</a>
                </li>
                
					
					@if (_SignInManager.IsSignedIn(User))
					{
					    <li class="nav-item">
                            <form asp-controller="Account" asp-action="Logout" method="post">
								<button type="submit" style="width: auto" class="nav-link btn btn-link py-0">注销 @User.Identity.Name</button>
                            </form>
                        </li>
					}
					else
					{
					    <li class="nav-item">
                            <a class="nav-link" href="/Account/Register">注册</a>
                        </li>
					    <li class="nav-item">
                            <a class="nav-link" href="/Account/Login">登录</a>
                        </li>
					}
                   
			</ul>
		</div>
	</nav>
	<div class="container">
		@RenderBody()
	</div>
		<script src="~/jquery/jquery.js"></script>
		<script src="~/twitter-bootstrap/js/bootstrap.js"></script>
		@RenderSection("Script", required: false)

</body>
</html>
